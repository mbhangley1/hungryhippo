<div class="page-header">
  <h1>Add a new item</h1></div>

  <form action="http://localhost:3000/create_item" class="form-horizontal">
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">
        Name
      </label>
      <div class="col-sm-10">
        <input type="text" id="name" name="name" placeholder="name" class="form-control">
      </div>
    </div>

      <div class="form-group">
      <label for="image_url" class="col-sm-2 control-label">
        Image url
      </label>
      <div class="col-sm-10">
        <input type="text" id="image_url" name="image_url" placeholder="Image url" class="form-control">
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <input type="submit" value="Add Item" class="btn btn-primary">
      </div>
    </div>
  </form>
