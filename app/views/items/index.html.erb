<p><a href="/items/new_form" class="btn btn-primary">Add a new item</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @list_of_items.each do |item| %>
      <tr>
        <td><img src="<%= item.image_url %>" width="80"></td>
        <td><%= item.name %></td>
        <td>
          <a href="/items/<%= item.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/items/<%= item.id %>/edit_form" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_item/<%= item.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
